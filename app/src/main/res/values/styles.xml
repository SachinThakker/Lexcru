<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="tv_wrap_content" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="monstserrat_bold" parent="tv_wrap_content">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="monstserrat_medium" parent="tv_wrap_content">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="monstserrat_regular" parent="tv_wrap_content">
        <item name="fontFamily">@font/monstserrat_regular</item>
    </style>

    <style name="screen_header" parent="tv_wrap_content">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/monstserrat_regular</item>
    </style>

    <!--EditText styles-->
    <style name="et_wrap_content" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="gotham_bold" parent="tv_wrap_content">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="MyDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--<item name="android:windowSoftInputMode">stateAlwaysHidden</item>-->
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="gotham_medium" parent="tv_wrap_content">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <!--Button styles-->
    <style name="bt_match_content" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">20dp</item>
    </style>



</resources>