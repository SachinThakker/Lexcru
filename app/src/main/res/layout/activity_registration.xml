                            android:layout_height="wrap_content"

                            android:backgroundTint="@color/white"
                            android:focusable="false"
                            android:inputType="number"

                            android:singleLine="true"
                            android:textColor="@color/white">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
