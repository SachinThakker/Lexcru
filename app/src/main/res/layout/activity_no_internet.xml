<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".views.NoInternetActivity">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ivBackNoIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoInternet"
        style="@style/gotham_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ivNoInternet"
        android:layout_centerHorizontal="true"
        android:text="@string/lbl_no_internet_connection"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/ivNoInternet" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoInternetSubText"
        style="@style/gotham_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:lineHeight="25dp"
        android:layout_below="@+id/tvNoInternet"
        android:layout_centerHorizontal="true"
        android:text="@string/lbl_no_internet_connection"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/tvNoInternet" />

</RelativeLayout>